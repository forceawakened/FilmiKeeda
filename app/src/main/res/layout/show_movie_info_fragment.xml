<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/show_movie_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorActivityBackground"
        android:padding="@dimen/padding_lg"
        tools:context="com.forceawakened.www.filmikeeda.ShowMovieInfo">
        <ImageView
            android:id="@+id/movie_poster"
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="342dp"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"/>
        <Button
            android:id="@+id/set_reminder_btn"
            android:drawableStart="@drawable/icon_alarm_small"
            android:text="@string/string_set_reminder"
            android:visibility="invisible"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/movie_poster"
            android:layout_width="160dp"
            android:layout_height="match_parent" />
        <Button
            android:id="@+id/add_to_watchlist_btn"
            android:drawableStart="@drawable/icon_bookmark_white_small"
            android:text="@string/string_add_to_watchlist"
            android:visibility="invisible"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/movie_poster"
            android:layout_width="160dp"
            android:layout_height="match_parent" />
        <RelativeLayout
            android:id="@+id/set_reminder_content"
            android:visibility="gone"
            android:layout_below="@+id/add_to_watchlist_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/show_date_picker_btn"
                android:layout_alignParentStart="true"
                android:text="@string/string_choose_date"
                android:layout_width="128dp"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/show_time_picker_btn"
                android:layout_alignParentRight="true"
                android:text="@string/string_choose_time"
                android:layout_width="128dp"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/ok_btn"
                android:layout_centerInParent="true"
                android:layout_below="@id/show_date_picker_btn"
                android:text="@string/string_ok"
                android:layout_width="64dp"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <TextView
            android:id="@+id/movie_title"
            android:layout_below="@+id/set_reminder_content"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="@dimen/text_size_lg" />
        <TextView
            android:id="@+id/movie_info"
            android:layout_below="@+id/movie_title"
            android:layout_marginTop="8dp"
            android:lineSpacingExtra="@dimen/text_size_sm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_sm" />
        <TextView
            android:id="@+id/movie_overview"
            android:layout_below="@+id/movie_info"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:textSize="@dimen/text_size_sm" />
        <TextView
            android:id="@+id/similar_movies_title"
            android:text="@string/string_similar_movies"
            android:visibility="invisible"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/movie_overview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="@dimen/text_size_sm" />
        <FrameLayout
            android:id="@+id/similar_movies"
            android:layout_below="@+id/similar_movies_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/movie_cast_title"
            android:text="@string/string_movie_cast"
            android:visibility="invisible"
            android:layout_below="@+id/similar_movies"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="@dimen/text_size_sm" />
        <FrameLayout
            android:id="@+id/movie_cast"
            android:layout_below="@+id/movie_cast_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
</ScrollView>
